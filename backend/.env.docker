# Database Configuration for Docker
DATABASE_URL=mysql+pymysql://academic_user:academic_pass@localhost:3306/academic_repo_db

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration 
DEBUG=True
APP_NAME=Academic Repository System
APP_VERSION=1.0.0

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800

# Database Settings
DATABASE_ECHO=False

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Email Configuration (Optional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=True

# Pagination Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
